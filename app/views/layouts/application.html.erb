<!DOCTYPE html>
<html>
  <head>
    <title>OnboardingProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Kosugi|Odibee+Sans&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <ul>
        <li><%= current_user.email %></li>
        <li><%= link_to "Create Article", articles_new_path %></li>
        <li><%= link_to "Log out", logout_path, method: "delete", class: 'logout' %></li>
      </ul>
    <% else %>
      <ul>
        <li><%= link_to "Login", login_path %></a></li>
        <li><%= link_to "Signup", signup_path %></a></li>
      </ul>
    <% end %>

    <% flash.each do |type, msg| %>
      <div>
        <%= sanitize(msg) %>
      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
