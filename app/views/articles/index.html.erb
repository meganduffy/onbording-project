<div class="container">

  <h3>Want to contribute?</h3>
  <%= link_to "Create Article", article_new_path %>
  <br>
<% @articles.each do |article| %>

  <p><%= article.title %></p>

  <p><%= truncate(article.content, length:300) %></p>

  <p><%= article.user.first_name %></p>

  <p><%= article.created_at %></p>

<% end %>
</div>

